<org.chromium.chrome.browser.firstrun.DataReductionProxyView android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  

    
  <ScrollView android:fillViewport="true" android:layout_height="match_parent" android:layout_marginBottom="57dp" android:layout_width="match_parent" android:scrollbarStyle="outsideOverlay">
    

        
    <LinearLayout android:gravity="center" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">
      

            
      <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_marginTop="@dimen/fre_margin" android:layout_width="wrap_content" android:lineSpacingMultiplier="1.4" android:text="@string/data_reduction_promo_title" android:textColor="@color/fre_title_color" android:textSize="@dimen/fre_title_text_size"/>
      

            
      <LinearLayout android:gravity="center_horizontal" android:id="@+id/fre_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/fre_margin" android:layout_width="match_parent">
        

                
        <ImageView android:contentDescription="@null" android:layout_height="@dimen/fre_image_carousel_height" android:layout_marginBottom="@dimen/fre_margin" android:layout_width="wrap_content" android:src="@drawable/data_reduction_illustration"/>
        

                
        <LinearLayout android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/fre_margin" android:layout_width="match_parent" android:orientation="vertical" android:paddingLeft="24dp" android:paddingRight="24dp">
          

                    
          <TextView android:gravity="start" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/fre_margin" android:layout_width="wrap_content" android:lineSpacingMultiplier="1.4" android:text="@string/data_reduction_promo_summary" android:textColor="@color/fre_text_color" android:textSize="@dimen/fre_normal_text_size"/>
          

                    
          <Switch android:fontFamily="sans-serif-medium" android:gravity="start" android:id="@+id/enable_data_saver_switch" android:layout_height="wrap_content" android:layout_width="match_parent" android:lineSpacingMultiplier="1.4" android:showText="false" android:text="@string/data_reduction_enabled_switch" android:textColor="@color/fre_text_color" android:textSize="@dimen/fre_normal_text_size"/>
          
                
        </LinearLayout>
        
            
      </LinearLayout>
      
        
    </LinearLayout>
    
    
  </ScrollView>
  

    
  <View android:layout_gravity="bottom" android:layout_marginBottom="56dp" style="@style/ButtonBarTopDivider"/>
  

    
  <Button android:background="?attr/listChoiceBackgroundIndicator" android:id="@+id/next_button" android:layout_gravity="bottom" android:layout_height="56dp" android:layout_width="match_parent" android:padding="16dp" android:text="@string/next" android:textAllCaps="true" android:textColor="@color/light_active_color" android:textSize="@dimen/fre_button_text_size"/>
  


</org.chromium.chrome.browser.firstrun.DataReductionProxyView>
