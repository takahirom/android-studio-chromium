<LinearLayout android:id="@+id/opt_out_promo" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
  

    
  <ImageView android:adjustViewBounds="true" android:background="#4FC3F7" android:contentDescription="@null" android:gravity="center" android:id="@+id/tabs_moved_illustration" android:layout_height="wrap_content" android:layout_width="match_parent"/>
  

    
  <TextView android:layout_height="wrap_content" android:layout_marginLeft="32dp" android:layout_marginRight="32dp" android:layout_marginTop="24dp" android:layout_width="wrap_content" android:text="@string/tabs_and_apps_opt_out_title" android:textColor="@color/default_text_color" android:textSize="16sp"/>
  

    
  <org.chromium.ui.widget.TextViewWithClickableSpans android:bufferType="spannable" android:id="@+id/opt_out_text" android:layout_height="wrap_content" android:layout_marginLeft="32dp" android:layout_marginRight="32dp" android:layout_marginTop="8dp" android:layout_width="match_parent" android:lineSpacingMultiplier="1.4" android:textColor="@color/opt_out_text_color" android:textSize="14sp"/>
  

    
  <Button android:id="@+id/got_it_button" android:layout_gravity="end" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:layout_marginRight="32dp" android:layout_marginTop="24dp" android:layout_width="wrap_content" android:text="@string/tabs_and_apps_got_it_button" android:textColor="@color/light_active_color" style="@style/ButtonCompatBorderless"/>
  

</LinearLayout>
