<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:minHeight="@dimen/snackbar_min_height" android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">
  

    
  <org.chromium.chrome.browser.snackbar.TemplatePreservingTextView android:id="@+id/snackbar_message" android:layout_gravity="start|center_vertical" android:layout_height="wrap_content" android:layout_marginBottom="14dp" android:layout_marginLeft="24dp" android:layout_marginTop="14dp" android:layout_weight="1" android:layout_width="0dp" android:textAlignment="viewStart" android:textColor="@android:color/white" android:textSize="14sp"/>
  

    
  <Button android:fontFamily="sans-serif-medium" android:id="@+id/snackbar_button" android:layout_gravity="center_vertical" android:layout_height="@dimen/snackbar_min_height" android:layout_width="wrap_content" android:paddingLeft="24dp" android:paddingRight="24dp" android:textAllCaps="true" android:textColor="@color/snackbar_button_color" android:textSize="14sp" style="@style/ButtonCompatBorderless"/>
  


</LinearLayout>
