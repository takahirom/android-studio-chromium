<!-- Reader Mode view. -->
<org.chromium.chrome.browser.widget.ReaderModeControl android:background="#FFF" android:gravity="center_vertical|start" android:id="@+id/reader_mode_view" android:layout_gravity="center_vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
  

    
  <!-- Lint flags this as a false positive overlap. -->
  
    
  <!--suppress RelativeOverlap -->
  
    
  <RelativeLayout android:layout_height="56dp" android:layout_width="match_parent">
    
        
    <ImageView android:contentDescription="@null" android:id="@+id/main_icon" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_width="wrap_content" android:src="@drawable/infobar_mobile_friendly"/>
    
        
    <TextView android:ellipsize="end" android:fontFamily="sans-serif" android:id="@+id/main_text" android:layout_centerVertical="true" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_toLeftOf="@+id/main_close" android:layout_toRightOf="@id/main_icon" android:layout_width="wrap_content" android:singleLine="true" android:text="@string/reader_view_text" android:textColor="#333333" android:textSize="@dimen/reader_mode_text_size"/>
    
        
    <ImageView android:contentDescription="@string/close" android:id="@+id/main_close" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_height="48dp" android:layout_marginRight="16dp" android:layout_width="48dp" android:scaleType="centerInside" android:src="@drawable/btn_close"/>
    
    
  </RelativeLayout>
  

</org.chromium.chrome.browser.widget.ReaderModeControl>
