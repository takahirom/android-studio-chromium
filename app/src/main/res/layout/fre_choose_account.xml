<org.chromium.chrome.browser.firstrun.AccountFirstRunView android:id="@+id/fre_account_layout" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  

    
  <ScrollView android:fillViewport="true" android:layout_height="match_parent" android:layout_marginBottom="57dp" android:layout_width="match_parent" android:scrollbarStyle="outsideOverlay">
    

        
    <LinearLayout android:gravity="center" android:id="@+id/fre_account_linear_layout" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">
      

            
      <TextView android:gravity="center" android:id="@+id/title" android:layout_height="wrap_content" android:layout_marginTop="@dimen/fre_margin" android:layout_width="wrap_content" android:lineSpacingMultiplier="1.4" android:text="@string/fre_set_up_chrome" android:textColor="@color/fre_title_color" android:textSize="@dimen/fre_title_text_size"/>
      

            
      <LinearLayout android:gravity="center_horizontal" android:id="@+id/fre_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/fre_margin" android:layout_width="match_parent" android:orientation="vertical">
        

                
        <org.chromium.chrome.browser.firstrun.ImageCarousel android:id="@+id/image_slider" android:layout_height="@dimen/fre_image_carousel_height" android:layout_marginBottom="@dimen/fre_margin" android:layout_width="@dimen/fre_image_carousel_width"/>
        

                
        <LinearLayout android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/fre_margin" android:layout_width="match_parent" android:orientation="vertical" android:paddingLeft="24dp" android:paddingRight="24dp">
          

                    
          <Spinner android:contentDescription="@string/accessibility_fre_account_spinner" android:id="@+id/google_accounts_spinner" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/fre_margin" android:layout_width="wrap_content" android:padding="0dp" android:textColor="@color/fre_text_color"/>
          

                    
          <TextView android:gravity="center" android:id="@+id/description" android:layout_height="wrap_content" android:layout_width="match_parent" android:lineSpacingMultiplier="1.4" android:text="@string/fre_account_choice_description" android:textColor="@color/fre_light_text_color" android:textSize="@dimen/fre_normal_text_size"/>
          
                
        </LinearLayout>
        
            
      </LinearLayout>
      
        
    </LinearLayout>
    
    
  </ScrollView>
  

    
  <View android:id="@+id/button_bar_separator" android:layout_gravity="bottom" android:layout_marginBottom="56dp" style="@style/ButtonBarTopDivider"/>
  

    
  <LinearLayout android:id="@+id/button_bar" android:layout_gravity="bottom" android:layout_height="56dp" android:layout_width="match_parent" android:orientation="horizontal">
    

        
    <!--suppress ButtonStyle -->
    
        
    <Button android:background="?attr/listChoiceBackgroundIndicator" android:gravity="start|center_vertical" android:id="@+id/negative_button" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="0dp" android:paddingLeft="@dimen/fre_button_padding" android:paddingRight="@dimen/fre_button_padding" android:text="@string/fre_skip_text" android:textAllCaps="true" android:textColor="@color/light_normal_color" android:textDirection="locale" android:textSize="@dimen/fre_button_text_size"/>
    

        
    <!--suppress ButtonStyle -->
    
        
    <Button android:background="?attr/listChoiceBackgroundIndicator" android:gravity="end|center_vertical" android:id="@+id/positive_button" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="0dp" android:paddingLeft="@dimen/fre_button_padding" android:paddingRight="@dimen/fre_button_padding" android:text="@string/choose_account_sign_in" android:textAllCaps="true" android:textColor="@color/light_active_color" android:textDirection="locale" android:textSize="@dimen/fre_button_text_size"/>
    
    
  </LinearLayout>
  


</org.chromium.chrome.browser.firstrun.AccountFirstRunView>
